<div class="container pt-3">
  <h1>New Cocktail</h1>

  <%= simple_form_for(@cocktail) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

      <%= f.association :ingredient, collection: Ingredient.all %>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>

  <%= link_to 'Back', cocktails_path %>
</div>
